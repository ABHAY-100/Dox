generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  googleId     String? @unique
  githubId     String? @unique
  displayName  String?
  email        String?  @unique
  refreshToken String?  
  refreshExpiry DateTime? 
  photo        String?
  provider     String
}
