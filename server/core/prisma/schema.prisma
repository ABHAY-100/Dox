generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(cuid())
  googleId    String?
  githubId    String?
  displayName String?
  githubName  String?
  email       String? @unique
  provider    String
  photo       String?

  refreshToken  String?
  refreshExpiry DateTime?

  githubAccessToken  String?
  githubTokenIV      String?
  githubTokenAuthTag String?

  repos UserRepo[]

  @@index([googleId])
  @@index([githubId])
  @@index([refreshToken])
  @@index([provider])
  @@index([email])
}

model UserRepo {
  id       String  @id @default(cuid())
  userId   String
  repoId   String
  owner    String
  repoName String

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([repoId])
  @@index([userId, repoId])
  @@unique([userId, repoId])
}
